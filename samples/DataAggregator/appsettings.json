        "TransactionAssertions": {
            "AssertDownedSubstatesMatchDownFromCoreApi": false,
            "SubstateTypesWhichAreAllowedToHaveIncompleteHistoryCommaSeparated": "ValidatorSystemMetadataSubstate",
